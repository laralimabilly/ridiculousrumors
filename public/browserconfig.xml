<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <!-- Square tiles for Windows Start Menu -->
      <square70x70logo src="/mstile-70x70.png"/>
      <square150x150logo src="/mstile-150x150.png"/>
      <square310x310logo src="/mstile-310x310.png"/>
      
      <!-- Wide tile for Windows Start Menu -->
      <wide310x150logo src="/mstile-310x150.png"/>
      
      <!-- Background color for the tile -->
      <TileColor>#000000</TileColor>
    </tile>
    
    <!-- Optional: Polling for live tiles (dynamic content) -->
    <polling-uri src="/api/live-tile-update"/>
    <frequency>30</frequency>
    
    <!-- Optional: Notification settings -->
    <notification>
      <polling-uri src="/api/notifications"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
    
    <!-- Optional: Badge updates -->
    <badge>
      <polling-uri src="/api/badge-update"/>
      <frequency>30</frequency>
    </badge>
  </msapplication>
</browserconfig>